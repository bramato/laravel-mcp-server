{
    "name": "bramato/laravel-mcp-server",
    "description": "A base Laravel package for building Model Context Protocol (MCP) servers.",
    "keywords": ["laravel", "mcp", "model-context-protocol", "llm", "ai", "json-rpc", "reverb"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bramato Contributors",
            "homepage": "https://github.com/bramato/laravel-mcp-server"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0|^10.0|^11.0|^12.0",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "sajya/server": "^7.0",
        "laravel/reverb": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Bramato\\LaravelMcpServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bramato\\LaravelMcpServer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bramato\\LaravelMcpServer\\Providers\\McpServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
} 